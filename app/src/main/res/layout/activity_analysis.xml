<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="38dp"
    tools:context=".AnalysisActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/menuButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/menu"
                android:src="@drawable/menu" />

            <TextView
                android:id="@+id/appNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="85dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/davinci_insights"
                android:textSize="16sp" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#E74129"
            app:cardCornerRadius="12dp"
            >

            <TextView
                android:id="@+id/resultadosTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="14dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/resultados"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/resultadosDescriTextView"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="start"
                android:layout_marginStart="14dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="120dp"
                android:fontFamily="@font/roboto_light"
                android:justificationMode="inter_word"
                android:text="@string/text1_4"
                android:textColor="@color/white"
                android:textSize="10sp"
                tools:ignore="SmallSp,TextSizeCheck,TextContrastCheck"
                tools:targetApi="o" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/search_background"
            android:orientation="horizontal"
            android:padding="12dp">

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints=""
                android:background="@null"
                android:fontFamily="@font/poppins_light_italic"
                android:hint="@string/pesquisar_por_um_produto"
                android:inputType=""
                android:textColorHint="#15133D"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck,VisualLintTextFieldSize" />

            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/search"
                android:contentDescription="@string/search_icon" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#E74129"
            app:cardCornerRadius="12dp"
            tools:ignore="TextSizeCheck">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="14dp"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/potenciaisTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/potenciais_produtos_para_alavancagem"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    tools:ignore="TextContrastCheck" />

                <ImageView
                    android:id="@+id/potenciaisIcon"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginStart="78dp"
                    android:contentDescription="@string/expandir"
                    android:src="@drawable/view" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="14dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/product_background"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <ImageView
                        android:id="@+id/starIcon1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="2dp"
                        android:contentDescription="@string/estrela"
                        android:src="@drawable/star" />

                    <TextView
                        android:id="@+id/productName1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:text="@string/produto_1"
                        android:textSize="7sp"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:id="@+id/productPurchases1"
                        android:layout_width="102dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="2dp"
                        android:background="@drawable/purchases_background"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="@string/n_compras"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        tools:ignore="SmallSp,TextContrastCheck" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/product_background"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <ImageView
                        android:id="@+id/starIcon2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="2dp"
                        android:contentDescription="@string/estrela"
                        android:src="@drawable/star" />

                    <TextView
                        android:id="@+id/productName2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:text="@string/produto_2"
                        android:textSize="7sp"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:id="@+id/productPurchases2"
                        android:layout_width="102dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="2dp"
                        android:background="@drawable/purchases_background"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="@string/n_compras"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        tools:ignore="SmallSp,TextContrastCheck" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/product_background"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <ImageView
                        android:id="@+id/starIcon3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="2dp"
                        android:contentDescription="@string/estrela"
                        android:src="@drawable/star" />

                    <TextView
                        android:id="@+id/productName3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:text="@string/produto_3"
                        android:textSize="7sp"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:id="@+id/productPurchases3"
                        android:layout_width="102dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="2dp"
                        android:background="@drawable/purchases_background"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="@string/n_compras"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        tools:ignore="SmallSp,TextContrastCheck" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#E74129"
            app:cardCornerRadius="12dp"
            tools:ignore="TextSizeCheck">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="14dp"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/mediaAvaliacoesTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/media_de_avaliacoes_por_produto"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    tools:ignore="TextContrastCheck" />

                <ImageView
                    android:id="@+id/mediaAvaliacoesIcon"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginStart="113dp"
                    android:contentDescription="@string/expandir"
                    android:src="@drawable/view" />

            </LinearLayout>

            <TextView
                android:id="@+id/mediaAvaliacoesContentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="14dp"
                android:fontFamily="@font/roboto_light"
                android:text="@string/text2_4"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#FFECE9"
            app:cardCornerRadius="12dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="14dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="14dp"
                tools:ignore="UseCompoundDrawables">
                <TextView
                    android:id="@+id/analiseSentimentoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/anaise_de_sentimento_por_produto"
                    android:textSize="12sp"
                    android:textColor="#5D5F60"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_gravity="start" />
                <ImageView
                    android:id="@+id/analiseSentimentoIcon"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginStart="102dp"
                    android:src="@drawable/view2"
                    android:contentDescription="@string/expandir" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/pieChart"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="14dp"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@string/grafico"
                    android:src="@drawable/pie_chart"
                    tools:ignore="ImageContrastCheck" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="14dp"
                    android:layout_marginBottom="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/avaliacoesTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/avaliacoes"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_medium" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <View
                            android:layout_width="7dp"
                            android:layout_height="7dp"
                            android:layout_gravity="center"
                            android:background="@drawable/neutral_marker" />
                        <TextView
                            android:id="@+id/neutralTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/neutras_nulas"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_light"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">

                        <View
                            android:layout_width="7dp"
                            android:layout_height="7dp"
                            android:layout_gravity="center"
                            android:background="@drawable/positive_marker" />
                        <TextView
                            android:id="@+id/positiveTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/positivas"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_light"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">

                        <View
                            android:layout_width="7dp"
                            android:layout_height="7dp"
                            android:layout_gravity="center"
                            android:background="@drawable/negative_marker" />
                        <TextView
                            android:id="@+id/negativeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/negativas"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_light"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/impulsionarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/impulsionar"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            tools:ignore="TextContrastCheck,VisualLintButtonSize"
            />

    </LinearLayout>
</ScrollView>
